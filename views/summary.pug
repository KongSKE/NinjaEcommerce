extends layout

block head
  
    link(rel='stylesheet', type='text/css', href='../CSS/summary.css')
    title Ninja Summary

block content
  
  //- Summary section
  div.summarySection
    div.summaryTopicSentence
      span Transaction Summary
    //- Shopping status
    div.shoppingDisplayStatusContainer
      div.row.justify-content-center
        div.col-sm-8.shoppingDisplayStatusColumn
          span.shoppingDisplayStatus
            | Check your transaction
          div.progress
            div(class="progress-bar bg-success" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100")
              | Done 75%
    div.summaryDetail
      div.summaryCart
        div.row
          div.pictureColumn
          div.productNameColumn
          div.productQuantityColumn
          div.productUnitPriceColumn
          div.productTotalPriceColumn
      div.row
        div.summaryAppointment
        div.summaryPayment
    
  //- Button selection
  div.buttonFinalSelection
    div.row.justify-content-center
      //- Confirm the payment, the modal plugin
      button(type="button" class="btn btn-success" id='confirmCartButton' data-toggle="modal" data-target="#exampleModal")
        | Confirm
      div(class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
        div(class="modal-dialog" role="document")
          div(class="modal-content")
            div(class="modal-header")
              h5(class="modal-title" id="exampleModalLabel") Ninja notes
              button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                span(aria-hidden="true") &times;
            div(class="modal-body")
              p You have confirmed the transaction.
              p Next , Your transaction will be complete.
            div(class="modal-footer")
              button(type="button" class="btn btn-secondary" data-dismiss="modal") No
              button(type="button" class="btn btn-primary" id="confirm") OK
      //- Cancel button
      button(type="button" class="btn btn-danger" id='cancelButton')
        | Cancel

block foot
  
  script(src='../script/summary.js')

extends layout

block head

  link(rel='stylesheet', type='text/css', href='../CSS/homepage.css')
  link(rel='stylesheet', type='text/css', href='../CSS/header-index.css')
  title Ninja Ecommerce

block content

  //- Welcome video section by KongSKE
  div(class="container-fluid")
    div.welcomeVideo
      //- KongSKE
      //- Header 
      header
        div(class="overlay")
        video(id="beer_background" playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop")
          source(src="./video/Beer_Pour_Videvo.mp4" type="video/mp4")
        div(class="container h-100")
          div(class="d-flex text-center h-100")
            div(class="my-auto w-100 text-white")
              h1(class="display-3") Drink
              h2 For Your Life

      //- section(class="my-5")
      //-   div(class="container")
      //-     div(class="row")
      //-       div(class="col-md-8 mx-auto")
      //-         p FEEL THE POWER
      //-         p 
      //-         p 
      //-         p(class="mb-0") Created by 
      //-           a(href="https://startbootstrap.com") Start Bootstrap
      //- Header Ending
    
    //- Promotion section
    div(class="container-fluid")
      br
      div(class="row")
        div(class="col-md-6").margin-bottom
          //- carousel start
          div(id="carouselExampleIndicators" class="carousel slide" style="width: 100%; margin:0 auto" data-ride="carousel")
            ol(class="carousel-indicators")
              li(data-target="#carouselExampleIndicators" data-slide-to="0" class="active")
              li(data-target="#carouselExampleIndicators" data-slide-to="1")
              //- li(data-target="#carouselExampleIndicators" data-slide-to="2")
            div(class="carousel-inner")
              div(class="carousel-item active")
                a(href='/pro1')
                  img(class="d-block w-100" src="./pictures/Promotion_Black_9Mixer.jpg" alt="First slide")
              div(class="carousel-item")
                a(href='/pro1')
                  img(class="d-block w-100" src="./pictures/Promotion_Red_9Mixer.jpg" alt="Second slide")
              //- div(class="carousel-item")
                img(class="d-block w-100" src="./pictures/home.png" alt="Third slide")
            a(class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev")
              span(class="carousel-control-prev-icon" aria-hidden="true")
              span(class="sr-only") Previous
            a(class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next")
              span(class="carousel-control-next-icon" aria-hidden="true")
              span(class="sr-only") Next
            //- carousel ending
        div(class="col-md-6")
          //- carousel start
          div(id="carouselExampleIndicators2" class="carousel slide" style="width: 100%; margin:0 auto" data-ride="carousel")
            ol(class="carousel-indicators")
              li(data-target="#carouselExampleIndicators2" data-slide-to="0" class="active")
              li(data-target="#carouselExampleIndicators2" data-slide-to="1")
              li(data-target="#carouselExampleIndicators2" data-slide-to="2")
            div(class="carousel-inner")
              div(class="carousel-item active")
                a(href='/pro2')
                  img(class="d-block w-100" src="./pictures/WhiteWalker_1_1.jpg" alt="First slide")
              div(class="carousel-item")
                a(href='/pro2')
                  img(class="d-block w-100" src="./pictures/WhiteWalker_2_2.jpg" alt="Second slide")
              div(class="carousel-item")
                a(href='/pro2')
                  img(class="d-block w-100" src="./pictures/WhiteWalker_3_3.jpg" alt="Third slide")
              //- div(class="carousel-item")
                img(class="d-block w-100" src="./pictures/home.png" alt="Third slide")
            a(class="carousel-control-prev" href="#carouselExampleIndicators2" role="button" data-slide="prev")
              span(class="carousel-control-prev-icon" aria-hidden="true")
              span(class="sr-only") Previous
            a(class="carousel-control-next" href="#carouselExampleIndicators2" role="button" data-slide="next")
              span(class="carousel-control-next-icon" aria-hidden="true")
              span(class="sr-only") Next
            a(class="carousel-control-next" href="#carouselExampleIndicators2" role="button" data-slide="next")
              span(class="carousel-control-next-icon" aria-hidden="true")
              span(class="sr-only") Next
            //- carousel ending

    //- Best seller section
    div(class="container-fluid")
      div(class="bestsellerWelcomeSentence")
        | BEST SELLER
      div(class="bestsellerBox")
        table(class="table table-hover" id="bestsellerBoxTable")
          thead
            tr
              th(scope="col") Rank
              th(scope="col") Product Name
              th(scope="col") Product Cost(à¸¿)
              th(scope="col") Description
          tbody(id="bestsellerBoxTableItem")


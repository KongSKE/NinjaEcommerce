doctype html
head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Bootstrap CSS
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO' crossorigin='anonymous')
  // Created CSS
  link(rel='stylesheet' type='text/css' href='../CSS/index.css')
  // Title
  title Ninja 4.0 HOME
  // CSS imagePreview
  link(rel='stylesheet' href='../CSS/ImagePreview.css')
  // JS imagePreview
  script(src='../bower_components/jquery/dist/jquery.js')
  script(src='../jQuery/ImagePreview.js')
// Header Section
.container
  // Logo
  img#logo-image(src='../pictures/logo-example.png' alt='')
  // Navigation Bars
  #nav-bar-box.row
    .col-sm-12
      ul#menu-nav-bar.nav.nav-pills.nav-fill
        li.nav-item
          a.nav-link.active(href='#') HOME
        li.nav-item
          a#menu-nav-promotion.nav-link(href='#') PROMOTION
        li.nav-item
          a.nav-link(href='#') STORE
        li.nav-item
          a.nav-link(href='#') STATUS
        li.nav-item
          a.nav-link(href='#') SIGN UP
        li.nav-item
          a.nav-link(href='#') LOG IN
// Body section
.container
  br
  center
    font(size='56') Register
  br
  // Change photo
  .container(align='center')
    h1
      | Profile
      small with preview
    .avatar-upload
      .avatar-edit
        input#imageUpload(type='file' accept='.png, .jpg, .jpeg')
        label(for='imageUpload')
      .avatar-preview
        #imagePreview(style='background-image: url(../pictures/user-default.png);')
  // 
  // username
  br
  .input-group.mb-3
    .input-group-prepend
      span#basic-addon1.input-group-text Username
    input.form-control(type='text' placeholder='Username' aria-label='Username' aria-describedby='basic-addon1')
  br
  // Password
  .input-group.mb-3
    .input-group-prepend
      span#basic-addon2.input-group-text Password
    input.form-control(type='text' placeholder='Password' aria-label='Password' aria-describedby='basic-addon1')
  // combobox
  .input-group.mb-3
    .input-group-prepend
      label.input-group-text(for='inputGroupSelect01') Sex
    select#inputGroupSelect01.custom-select(min-width:100px='')
      option(selected='') Choose...
      option(value='1') Male
      option(value='2') Female
  // Age
  .input-group.mb-3
    .input-group-prepend
      label.input-group-text(for='inputGroupSelect01') Date
    input.form-control(type='text' placeholder='Date' aria-label='Date' aria-describedby='basic-addon1')
    .input-group-prepend
      label.input-group-text(for='inputGroupSelect01') Month
    input.form-control(type='text' placeholder='Month' aria-label='Month' aria-describedby='basic-addon1')
    .input-group-prepend
      label.input-group-text(for='inputGroupSelect01') Year
    input.form-control(type='text' placeholder='Year' aria-label='Year' aria-describedby='basic-addon1')
  // Address
  .form-group
    label(for='inputAddress') Address
    input#inputAddress.form-control(type='text' placeholder='Address')
  // email
  form
    .form-group.row
      label.col-sm-2.col-form-label(for='inputEmail3') Email
      .col-sm-10
        input#inputEmail3.form-control(type='email' placeholder='Email')
    .form-group.row
      label.col-sm-2.col-form-label(for='inputPassword3') re-Email
      .col-sm-10
        input#inputPassword3.form-control(type='password' placeholder='Email')
    .form-group.row
      .col-sm-2 I accpet all rule in this web...
      .col-sm-10
        .form-check
          input#gridCheck1.form-check-input(type='checkbox')
          label.form-check-label(for='gridCheck1')
            | I accept
    .form-group.row
      .col-sm-10
        button.btn.btn-primary(type='submit') Sign in
// Footer Section
#footer-section.container
  .row
    #footer-quote.col-sm-12
      span
        | The fastest, most silent, most quality ecommerce like a 
        mark NINJA
        |  service.
      br
      span  -- Varit Asshole ( Tester of Ninja 4.0 ) -- 
  .row
    #footer-company-name-background.col-sm-12
      h1#footer-company-name NINJA ECOMMERCE

doctype html
html

  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css", integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO", crossorigin="anonymous")
    link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous")
    link(rel='stylesheet', type='text/css', href='../CSS/layout.css')
    block head

  body
    // Header section
    div(class="container-fluid")
      div(id="nav-bar-box", class="row")
        div(class="col-sm-12")
          ul(id="menu-nav-bar", class="nav nav-pills nav-fill")
            li(class="nav-item")
              a(href='/')
               img.fixsize-logo(src='../pictures/logo_onweb.png' href="/")
            li(class="nav-item")
              a(class=(menu === 'promotion' ? "nav-link active": "nav-link") href="/promotion") PROMOTION
            li(class="nav-item")
              a(class=(menu === 'store' ? "nav-link active": "nav-link") href="/store") STORE
            li(class="nav-item")
              a(class=(menu === 'status' ? "nav-link active": "nav-link") href="/status") STATUS
            if user
              li(class="nav-item")
                a(class=(menu === 'logout' ? "nav-link active": "nav-link") href="/logout") Logout
              li(class='nav-item')
                a(class=(menu === 'logout' ? "nav-link active": "nav-link") href=`/mycart/`+user.username) Mycart
            else
              li(class="nav-item")
                a(class=(menu === 'signup' ? "nav-link active": "nav-link") href="/signup") SIGN UP
              li(class="nav-item")
                a(class=(menu === 'login' ? "nav-link active": "nav-link") href="/login") LOG IN

    // Body section
    link(rel='stylesheet', type='style/css', href='../CSS/style.css')
    != messages('message', locals)
    block content

    // Footer section
    div(id="footer-section", class="container-fluid")
      hr
      div(class="row")
        div(id="footer-quote", class="col-sm-12")
          span
            | The fastest, most silent, most quality ecommerce like a
            mark NINJA
            |  service.
          br
          span
            |  -- Varit Asshole ( Tester of Ninja 4.0 ) --
      div(class="row")
        div(id="footer-company-name-background", class="col-sm-12")
          h1(id="footer-company-name") NINJA ECOMMERCE
  script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.js")
  script(src="http://malsup.github.com/jquery.form.js")
  script(src="index.js")

  // Foot section
  block foot

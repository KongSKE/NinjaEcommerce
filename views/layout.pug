doctype html
html

  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css", integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO", crossorigin="anonymous")
    link(rel='stylesheet', type='text/css', href='../CSS/layout.css')    

    block head

  body
    // Header section
    div(class="container-fluid")
      div(id="nav-bar-box", class="row")
        div(class="col-sm-12")
          ul(id="menu-nav-bar", class="nav nav-pills nav-fill")
            li(class="nav-item")
              a(class=(menu === 'homepage' ? "nav-link active": "nav-link") href="/") HOME
            li(class="nav-item")
              a(class=(menu === 'promotion' ? "nav-link active": "nav-link") href="/promotion") PROMOTION
            li(class="nav-item")
              a(class=(menu === 'store' ? "nav-link active": "nav-link") href="/store") STORE
            li(class="nav-item")
              a(class=(menu === 'status' ? "nav-link active": "nav-link") href="/status") STATUS
            if user
              li(class="nav-item")
                a(class=(menu === 'logout' ? "nav-link active": "nav-link") href="/logout") Logout
                button(id='test') Test
            else
              li(class="nav-item")
                a(class=(menu === 'signup' ? "nav-link active": "nav-link") href="/signup") SIGN UP
              li(class="nav-item")
                a(class=(menu === 'login' ? "nav-link active": "nav-link") href="/login") LOG IN

    // Body section
    block content 

    // Footer section
    div(id="footer-section", class="container-fluid")
      hr
      div(class="row")
        div(id="footer-quote", class="col-sm-12")
          span
            | The fastest, most silent, most quality ecommerce like a
            mark NINJA
            |  service.
          br
          span
            |  -- Varit Asshole ( Tester of Ninja 4.0 ) --
      div(class="row")
        div(id="footer-company-name-background", class="col-sm-12")
          h1(id="footer-company-name") NINJA ECOMMERCE 

  script(src='https://code.jquery.com/jquery-3.3.1.min.js', integrity='sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=', crossorigin='anonymous')
  script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.js")
  script(src="http://malsup.github.com/jquery.form.js")
  script(src="index.js")
  
  // Foot section
  block foot

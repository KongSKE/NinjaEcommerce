extends layout

block head
  
  link(rel='stylesheet', type='text/css', href='../CSS/homepage.css')
  title Ninja Ecommerce

block content
  
  div(class="container-fluid")
    br
    //- History section
    div(class="container-fluid")
      div(class="row")
        div(class="col-sm-6")
          //- carousel start
          div(id="carouselExampleIndicators" class="carousel slide" style="width: 600px; margin:0 auto" data-ride="carousel")
            ol(class="carousel-indicators")
              li(data-target="#carouselExampleIndicators" data-slide-to="0" class="active")
              li(data-target="#carouselExampleIndicators" data-slide-to="1")
              //- li(data-target="#carouselExampleIndicators" data-slide-to="2")
            div(class="carousel-inner")
              div(class="carousel-item active")
                a(href='/pro1')
                  img(class="d-block w-100" src="./pictures/Promotion_Black_9Mixer.jpg" alt="First slide")
              div(class="carousel-item")
                a(href='/pro1')
                  img(class="d-block w-100" src="./pictures/Promotion_Red_9Mixer.jpg" alt="Second slide")
              //- div(class="carousel-item")
                img(class="d-block w-100" src="./pictures/home.png" alt="Third slide")
            a(class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev")
              span(class="carousel-control-prev-icon" aria-hidden="true")
              span(class="sr-only") Previous
            a(class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next")
              span(class="carousel-control-next-icon" aria-hidden="true")
              span(class="sr-only") Next
            //- carousel ending
        div(class="col-sm-6")
          //- carousel start
          div(id="carouselExampleIndicators2" class="carousel slide" style="width: 600px; margin:0 auto" data-ride="carousel")
            ol(class="carousel-indicators")
              li(data-target="#carouselExampleIndicators2" data-slide-to="0" class="active")
              li(data-target="#carouselExampleIndicators2" data-slide-to="1")
            div(class="carousel-inner")
              div(class="carousel-item active")
                a(href='/pro1')
                  img(class="d-block w-100" src="./pictures/Promotion_Black_9Mixer.jpg" alt="First slide")
              div(class="carousel-item")
                a(href='/pro1')
                  img(class="d-block w-100" src="./pictures/Promotion_Red_9Mixer.jpg" alt="Second slide")
              //- div(class="carousel-item")
                img(class="d-block w-100" src="./pictures/home.png" alt="Third slide")
            a(class="carousel-control-prev" href="#carouselExampleIndicators2" role="button" data-slide="prev")
              span(class="carousel-control-prev-icon" aria-hidden="true")
              span(class="sr-only") Previous
            a(class="carousel-control-next" href="#carouselExampleIndicators2" role="button" data-slide="next")
              span(class="carousel-control-next-icon" aria-hidden="true")
              span(class="sr-only") Next
            //- carousel ending
      
    
    //- Promotion section
    div(class="container-fluid")
      div(class="promotion-welcome-sentence")
        | PROMOTION
      div(class="promotion-box")
        div(class="promotion-box-1")
          a(href="https://www.google.co.th")
            img(src="http://www.cipprint.com/images/Promotion%201.jpg")
        div(class="promotion-box-1")
          a(href="https://www.google.co.th")
            img(src="http://fb1-cw.lnwfile.com/_/cw/_raw/ks/iu/h0.png")
        div(class="promotion-box-1")
          a(href="https://www.google.co.th")
            img(src="http://www.absolat.com/images/promotion-in-marketing.jpg")
    
    //- Seller section
    div(class="container-fluid")
      div(class="bestseller-welcome-sentence")
        | BEST SELLER
      div(class="bestseller-box")
        table(class="table table-hover" id="bestseller-box-table")
          thead
            tr
              th(scope="col") Rank
              th(scope="col") Product Name
              th(scope="col") Product Cost(à¸¿)
              th(scope="col") Description
          tbody(id="bestseller-box-table-item")

block foot
  
  script(src='../script/homepage.js')

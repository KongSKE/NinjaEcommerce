extends layout

block head
  
    script(src="https://www.paypalobjects.com/api/checkout.js")
    link(rel='stylesheet', type='text/css', href='../CSS/completeTransaction.css')
    title Ninja Complete

block content
  
  //- Payment Topic
  div.paymentTopicContainer
    div.row.justify-content-center
      span.paymentWelcomeSentence 
        | Transaction Complete
  
  //- Shopping status
  div.shoppingDisplayStatusContainer
    div.row.justify-content-center
      div.col-sm-8.shoppingDisplayStatusColumn
        span.shoppingDisplayStatus
          | Complete process
        div.progress
          div(class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100")
            | Done 100%
    
  h1 completeTransaction
    
  //- Button selection
  div.buttonFinalSelection
    div.row.justify-content-center
      //- Confirm the payment, the modal plugin
      button(type="button" class="btn btn-success" id='confirmCartButton' data-toggle="modal" data-target="#exampleModal")
        | Confirm
      div(class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
        div(class="modal-dialog" role="document")
          div(class="modal-content")
            div(class="modal-header")
              h5(class="modal-title" id="exampleModalLabel") Ninja notes
              button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                span(aria-hidden="true") &times;
            div(class="modal-body")
              p Your payment has been save! 
              p Next , it is the summary of this transaction.
            div(class="modal-footer")
              button(type="button" class="btn btn-secondary" data-dismiss="modal") No
              button(type="button" class="btn btn-primary" id="yesButton") OK
      //- Cancel button
      button(type="button" class="btn btn-danger" id='cancelButton')
        | Cancel

block foot
  
  script(src='../script/completeTransaction.js')
